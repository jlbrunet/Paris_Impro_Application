<div class="container background-forgot">

  <div class="logo">
    <%= image_tag("logo_paris_impro2.jpeg", class: "logo-img") %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="background-form background-padding-new-registration">
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    error: "Email requis",
                    input_html: { autocomplete: "email" } %>
      </div>

    </div>
    <div class="form-action-2">
      <%= f.button :submit, "Modifier mon mot de passe", class: "btn-red btn-new-mdp" %>
      <div class="btn-back-forgot">
        <%= link_to user_session_path , class: "btn-red-back-forgot" do %>
          <div><i class="fa-solid fa-circle-chevron-left"></i> Retour</div>
        <% end %>
      </div>
    </div>
  <% end %>


</div>
