<div class="container background-forgot">

  <div class="d-flex justify-content-center p-4">
    <%= image_tag("logo_paris_impro2.jpeg", class: "rounded-circle border border-2 border-primary", style:"width: 140px;") %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="bg-white m-3 background-padding-new-registration" style="border-radius: 30px">
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    error: "Email requis",
                    input_html: { autocomplete: "email" } %>
      </div>

    </div>
    <div class="text-center" style="margin-top: -40px">
      <%= f.button :submit, "Modifier mon mot de passe", class: "btn-red btn-new-mdp" %>
      <div class="btn-back-forgot">
        <%= link_to user_session_path , class: "btn-red-back-forgot" do %>
          <div><i class="fa-solid fa-circle-chevron-left"></i> Retour</div>
        <% end %>
      </div>
    </div>
  <% end %>


</div>
