<div class="container background-signup">

  <div class="logo">
    <%= image_tag("logo_paris_impro2.jpeg", class: "logo-img") %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="background-form background-padding-new-session">
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Email",
                    input_html: { autocomplete: "email", class: "font-form" } %>
        <%= f.input :password,
                    required: false,
                    label: "Mot de passe",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

  <div class="form-action-2">
    <%= f.button :submit, "Se connecter", class: "btn-red btn-new-session" %>
  <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "btn-red text text-center" %><br />
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "btn-red text text-center" %><br />
    <% end %>
  </div>

</div>
