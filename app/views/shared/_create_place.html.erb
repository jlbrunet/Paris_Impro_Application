<div class="d-none blur-modale" data-add-places-target="modale">
  <div class="modale-add-place">
    <div class="sentence">Ajouter des places</div>
    <%= simple_form_for(@place, url: course_create_place_path(@course)) do |f| %>
      <div class="add-place">
        <div class="btn btn-red-modale btn-add-remove" data-action="click->add-places#plus">+</div>
          <%= f.input :number, label: false, input_html: { value: 0, readonly: true, data: { add_places_target: "number"} } %>
        <div class="btn btn-red-modale btn-add-remove" data-action="click->add-places#minus">-</div>
      </div>
      <div class="validate-place">
        <button class="btn-red-modales btn-validation-place" name="commit" type="submit" value="Valider">Valider</button>
        <%= f.input :lesson_id, as: :hidden, input_html: {value: lesson.id} %>
        <button data-action="click->add-places#change" class="btn btn-red-modales">Annuler</button>
      </div>
    <% end %>
  </div>
</div>
