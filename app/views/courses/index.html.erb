<div class="container background-absence pb-100px">
  <%= render partial:'/shared/navbar', locals: {title: ""} %>

  <div class="courses">
    <div class="title-c"><h2 class="font-headers">Liste des cours</h2></div>
    <div class="border-tableau"></div>
    <div class="tableau">
      <div class="absences margin-rectangle-admin rectangle">
        <div class="tab-courses">
          <% @courses.sort_by { |course| @day_order[course[:day].strip.to_sym] }.each_with_index do |course, index| %>
            <div class="separation">
              <div class="bloc-courses">
                <p class="text-gras"><%= course.day %> <%= course.hour.strftime("%H") %>h<%= course.hour.strftime("%M") if course.hour.strftime("%M").to_i > 0 %> | <%= course.level %> | <%= course.teacher %></p>
                <p class="text-lieu"><%=  course.location %></p>
              </div>
              <div class="separation-button">
                <div class="btn-admin">
                  <%= link_to course_lessons_path(course) do %>
                    <p class="no-text-deco">Absences<i class="fa-solid fa-circle-chevron-right space-chevron"></i></p>
                  <% end %>
                </div>
                <div class="btn-admin">
                  <%= link_to course_path(course) do %>
                    <p class="no-text-deco">Élèves<i class="fa-solid fa-circle-chevron-right space-chevron"></i></p>
                  <% end %>
                </div>
              </div>
            </div>
            <% if index != @courses.size - 1 %>
              <div class="tiret"></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
