<div class="container background-absence">
  <div class="hello">
    <div class="hello-img">
      <%= image_tag("logo_paris_impro2.jpeg", class: "logo-img-home") %>
    </div>
    <div class="hello-texte hello-admin">
      <h1>Hello</h1>
    </div>
  </div>

  <div class="courses">
    <div class="title-c">
      <h2 class="font-headers">Liste des cours</h2>
    </div>

    <div class="border-tableau"></div>

    <div class="tableau">
      <div class="absences margin-rectangle-admin rectangle">
        <div class="tab-courses">
          <% @courses.each_with_index do |course, index| %>
            <div class="separation">
              <div class="bloc-courses">
                <p class="text-gras"><%= course.day %> | <%= course.level %></p>
                <p class="text-lieu"><%=  course.location %></p>
              </div>

              <div class="separation-button">
                <div class="btn-admin">
                  <%= link_to course_lessons_path(course) do %>
                    <p class="no-text-deco">Absences<i class="fa-solid fa-circle-chevron-right space-chevron"></i></p>
                  <% end %>
                </div>
                <% if @user.status == "admin" %>
                  <div class="btn-admin">
                    <%= link_to course_path(course) do %>
                      <p class="no-text-deco">Élèves<i class="fa-solid fa-circle-chevron-right space-chevron"></i></p>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            <% if index != @courses.size - 1 %>
              <div class="tiret"></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
